{
  "name": "stoic-sage",
  "main": "src/index.ts",
  "compatibility_date": "2025-01-01",
  "workers_dev": true,

  // Custom domain
  "routes": [
    { "pattern": "stoicsage.ai", "custom_domain": true }
  ],

  // D1 database for storing entries
  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "stoic-sage-db",
      "database_id": "5b5e0f9a-9858-464a-b65a-4f8df001862e"
    }
  ],

  // Vectorize index for semantic search
  "vectorize": [
    {
      "binding": "VECTORIZE",
      "index_name": "meditations-index"
    }
  ],

  // Workers AI for embeddings and LLM
  "ai": {
    "binding": "AI"
  }
}
